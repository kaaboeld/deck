doctype html
html(lang="ru").no-js
    head
        meta(charset="utf-8")
        
        meta(http-equiv="X-UA-Compatible",content="IE=edge")
        block title
            title DECK
        meta(name="keywords",content="")
        meta(name="description",content="")
        
        meta(name="theme-color",content="#ffffff")
        meta(name="msapplication-TileColor",content="#ffffff")
        
        meta(name="apple-mobile-web-app-capable",content="yes")
        meta(name="apple-mobile-web-app-status-bar-style",content="white")
        meta(name="viewport",content="width=device-width,initial-scale=1.0,maximum-scale=1.0,user-scalable=no")
        
        //  styles
        link(rel="stylesheet",href="//maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css")
        link(rel="stylesheet",href="css/main.min.css")
        // /styles
        script(src="//cdnjs.cloudflare.com/ajax/libs/modernizr/2.8.3/modernizr.min.js")
    body
        #map
        #layout
            block content
            
        //  script libs
        script(src="//ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js")
        script(src="js/lib/jquery.mobile-events.min.js")
        script(src="/bower_components/handlebars/handlebars.min.js")
        script(src="/bower_components/history.js/scripts/bundled/html4+html5/jquery.history.js")
        // /script libs
        
        //  templates
        script(id="card-template",type="text/x-handlebars-template")
            div(class="card card-type-{{type}}",data-type="{{type}}",data-index="{{index}}")
                .badge
                    .content
                        .num {{number}}
                        .icon.icon-remove
                            img(src="./i/arrows_remove.svg")
                        .icon.icon-add.icon-add-wide
                            img(src="./i/software_layout.svg").i-layout
                        .icon.icon-add.icon-add-narrow
                            img(src="./i/software_layout_sidebar_left.svg").i-layout
        // /templates
        
        //  script data
        script(src="./data/cards.js")
        // /script data
        
        //  script project
        script(src="js/main.min.js")
        // /script project